---
// src/components/KpiCard.astro
interface Props {
  title: string;
  value: string | number;
  subValue?: string;
  changeColor?: 'green' | 'red' | 'gray'; 
}
const { title, value, subValue, changeColor = 'gray' } = Astro.props;
---
<div class="bg-slate-800 p-6 rounded-lg shadow-lg border border-slate-700">
  <h3 class="text-sm font-medium text-gray-400 uppercase tracking-wider">{title}</h3>
  <div class="mt-2 flex items-baseline gap-2">
    <p class="text-3xl font-bold text-white">{value}</p>
    {subValue && (
      <span class:list={["text-sm font-medium", changeColor === 'red' ? 'text-red-400' : (changeColor === 'green' ? 'text-green-400' : 'text-gray-400')]}>
        {subValue}
      </span>
    )}
  </div>
</div>