---
// src/layouts/BlogPost.astro

const { frontmatter } = Astro.props;
---
<article class="max-w-3xl mx-auto px-6 py-12 md:py-20">
  <header class="mb-10 text-center">
    <p class="text-slate-400 mb-2">
      Published on: {(new Date(frontmatter.pubDate)).toLocaleDateString('en-us', {
        year: 'numeric',
        month: 'short',
        day: 'numeric'
      })}
    </p>
    <h1 class="text-4xl md:text-5xl font-bold text-slate-100 leading-tight">
      {frontmatter.title}
    </h1>
  </header>

  {frontmatter.heroImage && (
    <img 
      src={frontmatter.heroImage} 
      alt={`Cover image for ${frontmatter.title}`} 
      class="w-full rounded-2xl mb-10 aspect-[21/9] object-cover"
    />
  )}
  
  <div class="prose prose-invert prose-lg text-justify">
    <slot />
  </div>
</article>